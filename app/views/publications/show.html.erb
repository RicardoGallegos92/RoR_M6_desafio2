<p style="color: green"><%= notice %></p>
<!-- Publicacion -->
<%= render @publication %>

<div>
  <%= button_to "Back to publications", publications_path, method: :get %>
  <% if user_signed_in? %>
    <% if @publication.user_id == current_user.id %>
      <%= button_to "Edit this publication", edit_publication_path(@publication), method: :get %>
      <%= button_to "Destroy this publication", @publication, method: :delete %>
    <% end %>
  <% end %>
</div>

<% if user_signed_in? %>
  <h3>Nuevo Comentario :D</h3>
  <%= render 'comments/form', comment: @comment%>
<% end %>

