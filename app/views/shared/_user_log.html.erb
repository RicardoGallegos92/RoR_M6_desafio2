<!-- mostramos distintas opciones dependiendo de si el user estÃ¡ loggeado o no -->
<% if user_signed_in? %>
  <li class="nav-item">
    Hola <%= current_user.name || current_user.email %>
  </li>
  <!--  -->
  <li class="nav-item">
    <%= button_to 'Log Out', destroy_user_session_path, class: 'nav-link', :method => :delete %>
  </li>
<% else %>
  <li class="nav-item">
    <%= button_to 'Log In', new_user_session_path, class: 'nav-link', :method => :get %>
  </li>
  <li class="nav-item">
    <%= button_to "Registrarse", new_user_registration_path, class: 'nav-link', :method => :get %>
  </li>
<% end %>