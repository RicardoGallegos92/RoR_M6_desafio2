<!-- Incluir el formulario de comentarios -->
<%= render 'comments/form', publication: publication %>
<!-- Comentarios anteriores -->
<h6>Comentarios:</h6>
<ul>
  <% publication.comments.each do |comment| %>
    <li><strong><%= comment.user.name %>:</strong> <%= comment.text %></li>
  <% end %>
</ul>

